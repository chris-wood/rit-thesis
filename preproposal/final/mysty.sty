\newcommand{\boxwidth}{.9\linewidth}
\newcommand{\boxspace}{\hspace{1em}}
\newcommand{\boxlr}[2]{
   \begin{tabular*}{\boxwidth}{@{\extracolsep{\fill}} @{\boxspace}l r@{\boxspace}}
     #1 & #2
   \end{tabular*}
}
\newcommand{\boxtitle}[4]{
  \begin{center}
    \framebox[\boxwidth]{
      \vbox{
        \boxlr{#1}{\today}\\
        \vspace*{-.5em}\boxlr{#2}{}\\
        \vspace{.5em}{\Large #3}
        \boxlr{\small \it \arl}{\small \it#4}\\
      }
    }
  \end{center}
}

